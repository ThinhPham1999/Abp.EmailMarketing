@page
@using Abp.EmailMarketing.Localization
@using Abp.EmailMarketing.Web.Pages.Emails
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model CreateModalModel
@inject IStringLocalizer<EmailMarketingResource> L
@{
    Layout = null;
}
<form asp-page="/Emails/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewEmail"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Email.EmailString" />
            <abp-input asp-for="Email.Password" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
