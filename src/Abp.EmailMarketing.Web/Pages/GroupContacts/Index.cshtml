@page
@using Abp.EmailMarketing.Localization
@using Abp.EmailMarketing.Permissions
@using Abp.EmailMarketing.Web.Pages.GroupContacts
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<EmailMarketingResource> L
@inject IAuthorizationService AuthorizationService
@model IndexModel

@section scripts
{
    <abp-script src="/Pages/GroupContacts/Index.js" />
    <abp-style src="/libs/myStyle/Index.css" />
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Groups"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                @if (await AuthorizationService
                   .IsGrantedAsync(EmailMarketingPermissions.Groups.Create))
                {
                    <abp-button id="NewGroupButton"
                                text="@L["NewGroup"].Value"
                                icon="plus"
                                button-type="Primary" />
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="GroupsTable">

        </abp-table>
    </abp-card-body>
</abp-card>
